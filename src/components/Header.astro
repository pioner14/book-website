---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: 'ru' | 'ua' | 'fr';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---
<header class="bg-parchment text-ink shadow-md border-b border-accent/20">
    <div class="container mx-auto px-4 py-4 flex flex-col items-center">
        <a href={`/${lang}`} class="text-2xl font-heading font-bold text-ink hover:text-accent transition-colors tracking-wide text-center mb-2">
            {t('header.book_title')}
        </a>
        <nav class="flex items-center space-x-4">
            <!-- Переключатель языков -->
            <a href="/ru" class:list={[{'font-bold text-accent': lang === 'ru'}, "p-2 hover:text-accent transition-colors"]}>RU</a>
            <a href="/ua" class:list={[{'font-bold text-accent': lang === 'ua'}, "p-2 hover:text-accent transition-colors"]}>UA</a>
            <a href="/fr" class:list={[{'font-bold text-accent': lang === 'fr'}, "p-2 hover:text-accent transition-colors"]}>FR</a>
        </nav>
    </div>
</header>
