---
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: 'ru' | 'ua' | 'fr';
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---
<header class="bg-ink text-paper shadow-md">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href={`/${lang}`} class="text-2xl font-sans font-bold text-paper hover:text-accent transition-colors">
            {t('header.book_title')}
        </a>
        <nav>
            <!-- Место для переключателя языков и ссылок -->
            <a href="/ru" class:list={[{'font-bold text-accent': lang === 'ru'}, "p-2"]}>RU</a>
            <a href="/ua" class:list={[{'font-bold text-accent': lang === 'ua'}, "p-2"]}>UA</a>
            <a href="/fr" class:list={[{'font-bold text-accent': lang === 'fr'}, "p-2"]}>FR</a>
        </nav>
    </div>
</header>
